<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>

<% zkServers = '' -%>
<% node['zk']['servers'].each do |key, value| -%>
        <% zkServers.concat(value) -%>
	<% zkServers.concat(',') -%>
<% end %>

<property>
<name>hbase.zookeeper.quorum</name>
<value><%= zkServers.chomp(',') -%></value>
</property>

<property>
<name>hbaseindexer.zookeeper.connectstring</name>
<value><%= node['zk']['servers']['1'] -%>:2181</value>
</property>

</configuration>
