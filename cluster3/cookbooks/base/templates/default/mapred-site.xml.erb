<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>
<property>
<name>mapreduce.framework.name</name>
<value>yarn</value>
</property>

<property>
<name>yarn.app.mapreduce.am.staging-dir</name>
<value>/user</value>
</property>

<property>
<name>mapreduce.jobhistory.address</name>
<value><%= node['historyserver']['hostname'] %>:<%= node['historyserver']['port'] %></value>
</property>

<property>
<name>mapreduce.jobhistory.webapp.address</name>
<value><%= node['historyserver']['hostname'] %>:<%= node['historyserver']['webappport'] %></value>
</property>
</configuration>
