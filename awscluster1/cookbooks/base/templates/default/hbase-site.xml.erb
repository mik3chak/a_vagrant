<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>

<property>
<name>hbase.cluster.distributed</name>
<value>true</value>
</property>

<property>
<name>hbase.rootdir</name>
<value>hdfs://<%= node['namenode']['hostname'] %>:<%= node['namenode']['port'] %>/hbase</value>
</property>

<% zkServers = '' -%>
<% node['zk']['servers'].each do |key, value| -%>
        <% zkServers.concat(value) -%>
	<% zkServers.concat(',') -%>
<% end %>

<property>
<name>hbase.zookeeper.quorum</name>
<value><%= zkServers.chomp(',') %></value>
</property>

</configuration>
