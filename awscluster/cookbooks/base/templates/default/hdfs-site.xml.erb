<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>
<property>
<name>dfs.namenode.name.dir</name>
<value>file:///data/1/dfs/nn,file:///data/nfsmount/dfs/nn</value>
</property>

<property>
<name>dfs.datanode.data.dir</name>  
<value>file:///data/1/dfs/dn,file:///data/2/dfs/dn,file:///data/3/dfs/dn,file:///data/4/dfs/dn</value>
</property>

<property>
<name>dfs.permissions.superusergroup</name>
<value>hadoop</value>
</property>

<% if node['hostname'] == node['secondarynamenode']['hostname'] -%>
<property>
<name>dfs.namenode.http-address</name>
<value><%= node['namenode']['hostname'] %>:50070</value>
<description>The address and the base port on which the dfs NameNode Web UI will listen. This property should not in NameNode, else NameNode Web UI will not works.</description>
</property>
<% end -%>

</configuration>
